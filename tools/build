#!/usr/bin/env bash

function main {
  local script_dir
  script_dir=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)
  local repo_dir="${script_dir}/.."

  cd "${repo_dir}" || return 1
  if [[ ! -f build/CMakeCache.txt ]]; then
    cmake -S . -B build --install-prefix="${repo_dir}/install"
  fi
  cmake --build build -j 8
}

main "$@"
